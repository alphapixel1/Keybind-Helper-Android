<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/group_background"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/keybind_settings_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="300dp"
            android:text="KeybindName"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/icon_color" />

        <LinearLayout
            android:id="@+id/keybind_copy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#07000000"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                app:srcCompat="@drawable/copy" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:clickable="false"
                android:padding="0dp"
                android:text="Copy"
                android:textColor="@color/icon_color"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/keybind_delete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#07000000"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                app:srcCompat="@drawable/delete" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:clickable="false"
                android:padding="0dp"
                android:text="Delete"
                android:textColor="@color/icon_color"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/keybind_move"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#07000000"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:clickable="false"
                app:srcCompat="@drawable/up_down_arrow" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:clickable="false"
                android:padding="0dp"
                android:text="Move Keybind"
                android:textColor="@color/icon_color"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/keybind_sendtogroup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:background="#07000000"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="50dp"
                android:layout_height="37dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0"
                android:clickable="false"
                android:rotation="0"
                app:srcCompat="@drawable/send" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:clickable="false"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:text="Send To Group"
                android:textColor="@color/icon_color"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>